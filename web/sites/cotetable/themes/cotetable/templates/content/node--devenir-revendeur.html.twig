    <div class="container form-position">
        <div class="row">
            <div class="col">
                <div class="container max-1180 form-container">
                    <div class="row">
                        <div class="col">
                            <div class="form-wrap">
                                {{ content.field_revendeur_c2_form }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
