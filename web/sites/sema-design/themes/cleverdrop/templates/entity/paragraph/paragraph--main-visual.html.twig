{% set classes = [
  'MainVisual-wpr'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="Section MainVisual">

        <div class="MainVisual-background">
          {{ content.field_picture }}
        </div>

        <div class="MainVisual-overContent">
          <div class="MainVisual-onTitle">
            {{ content.field_on_title }}
          </div>
          <div class="MainVisual-title">
            <h1>{{ content.field_title }}</h1>
          </div>
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
