<div class="container listing-offres">
    <div class="row">
        <div class="col-12 col-md-3 filters">
            <h3 class="d-none d-sm-block c-text-bold">Filtrer</h3>

            <div class="d-block d-md-none">
                <button class="cta-filter top js-toggle-filters c-text-bold">
                    Filtrer
                </button>
            </div>

            <input type="text" id="searchbox" class="c-text-semi-bold" placeholder="Rechercher une offre" />

            {% if offers %}
                <div id="groupe-filtres-offres-emploi">
                    <div id="filtre-contrat" class="filtres-offres-emploi">
                        <span class="type c-text-bold">Type de contrat</span>
                        <div class="select-option"></div>
                    </div>
                    <div id="filtre-poste" class="filtres-offres-emploi">
                        <span class="type c-text-bold">Type de poste</span>
                        <div class="select-option"></div>
                    </div>
                    <div id="filtre-lieu" class="filtres-offres-emploi">
                        <span class="type c-text-bold">Lieu de travail</span>
                        <div class="select-option"></div>
                    </div>
                    <div class="d-block d-sm-none">
                        <button class="cta-filter bottom js-toggle-filters c-text-bold" style="display: none">
                            Valider
                        </button>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-12 col-md-9 jobs-list">
            <h3 class="c-text-bold">Les postes à pourvoir</h3>
            {% if offers %}
                <div id="alerte-offres"></div>
                <table id="toutes-les-offres" class="display">
                    <thead>
                        <tr>
                            <td class="control"></td>
                            <th class="all wrap">Poste</th>
                            <th class="all">Type de contrat</th>
                            <th class="js-hide">Type de poste</th>
                            <th class="not-mobile">Date de début</th>
                            <th class="not-mobile">Lieu</th>
                            <th class="not-mobile js-only-xs"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for offer in offers %}
                            <tr class="clickable-row c-text-bold" data-href="{{ path('offresEmploi.content', {ref: offer.codeRecrutement}) }}">
                                <td class="control"></td>
                                <td class="wrap">{{ offer.intitulePoste }}</td>
                                <td class="">{{ offer.typeContrat }}</td>
                                <td>{{ offofferre.metier }}</td>
                                <td>{{ offer.dateOuverturePoste|date("d/m/Y") }}</td>
                                <td>{{ offer.lieuRecrutement }}</td>
                                <td><a href="{{ path('offresEmploi.content', {ref: offer.codeRecrutement}) }}">Voir l'annonce</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div id="alerte-offres" class="c-text-bold">
                    <p class="error">Nous n'avons aucune offre pour le moment. Revenez bientôt pour de nouvelles offres ou postulez
                        avec une <a href="/candidature">candidature spontanée</a>.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>