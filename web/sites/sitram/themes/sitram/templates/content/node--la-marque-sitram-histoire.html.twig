<div id="marque" class="histoire">
    <!-- BANNER -->
    <div id="ban-intro" class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            {{ content.field_histoire_banner }}
                        </div>
                    </div>
                    <div class="row my-4 my-lg-0">
                        <div class="col">
                            {{ content.field_histoire_title }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- CONTENT 1 -->
        <div class="row">
            <div class="col-12 col-lg-6 pr-lg-5 my-auto">
                <div class="max-550">
                    {{ content.field_histoire_c1_txt }}
                </div>
            </div>
            <div class="col-12 col-lg-6 my-4 my-lg-0">
                <div class="h-100 d-flex align-items-center justify-content-center">
                    {{ content.field_histoire_c1_img }}
                </div>
            </div>
        </div>

        <!-- CONTENT 2 -->
        <div class="row mt-5">
            <div class="col">
                {{ content.field_histoire_c2_title }}
            </div>
        </div>
        <div class="row my-5 justify-content-center no-gutters">
            {% for i in 0..15 %}
                <div class="col-12 col-sm-6 col-lg-auto content2-images mw-100">
                    {{ content.field_histoire_c2_imgs[i] }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>

