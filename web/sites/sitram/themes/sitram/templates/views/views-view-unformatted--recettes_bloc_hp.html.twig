<div class="row">
    {% for row in rows %}
        {%
            set row_classes = [
            default_row_class ? 'col-12 col-sm-6',
        ]
        %}
        <div{{ row.attributes.addClass(row_classes) }}>
            <div class="recette-item">
                {{- row.content -}}
            </div>
        </div>
    {% endfor %}
</div>


