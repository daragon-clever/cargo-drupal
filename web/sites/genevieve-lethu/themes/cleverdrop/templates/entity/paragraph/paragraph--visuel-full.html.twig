{%
  set classes = [
  'paragraph',
  'backstage',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="backstage-wrapper pos-rel">
              {{ content.field_picture }}
              <div class="backstage-over">
                <h2>{{ content.field_title }}</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
