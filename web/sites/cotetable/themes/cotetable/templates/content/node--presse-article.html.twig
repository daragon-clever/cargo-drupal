{{ attach_library('cotetable/goodshare') }}

<div id="presse-article">
    <!-- BANNER -->
    <div class="banner container-fluid bg-color3">
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h1>{{ content.field_press_article_title }}</h1>
                            <h2>{{ content.field_press_article_date }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTENT 1 -->
    <div class="container c1 my-5 max-690">
        <div class="row">
            <div class="col">
                {% for i in 0..content.field_press_article_img['#items']|length-1 %}
                    <a href="{{ file_url(content.field_press_article_pdf['#items'].entity.uri.value) }}"
                       target="_blank">
                        <img src="{{ file_url(content.field_press_article_img['#items'][i].entity.uri.value) }}"
                             alt="{{ node.field_press_article_img[i].alt }}">
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="row mt-5">
            <div class="col">
                <div class="social-wrapper pt-5">
                    <div data-social="facebook">
                        <div class="social1"></div>
                    </div>
                    <div data-social="twitter">
                        <div class="social2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

