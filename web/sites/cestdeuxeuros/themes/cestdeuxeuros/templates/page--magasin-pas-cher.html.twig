<div class="header-wrapper">
    <!-- Header -->
    {% include directory ~ '/partials/header.html.twig' %}
</div>

<div class="container main-content">
    {% if page.highlighted %}
    <div class="row message-site">
        <div class="col">
            {{ page.highlighted }}
        </div>
    </div>
    {% endif %}
    {% if page.content %}
    <div class="row">
        <div class="col">
            {{ page.msgevent }}
            {{ page.content }}
        </div>
    </div>
    {% endif %}
</div>

<!-- Footer -->
{{ drupal_entity('block_content', '8') }}

<div class="footer-wrapper">
    <!-- Footer -->
    {% include directory ~ '/partials/footer.html.twig' %}
</div>

{% if page.popup_newsletter %}
{{ page.popup_newsletter }}
{% endif %}