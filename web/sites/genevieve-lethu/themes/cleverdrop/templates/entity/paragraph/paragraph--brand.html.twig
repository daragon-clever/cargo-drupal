{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
  'brand',
  'animation-brand'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }} style="background-image: url('{{ file_url(content.field_picture[0]['#item'].entity.fileUri) }}');" data-animate='{"threshold": 0.4}'>
    {% block content %}
    <div class="container">
      <div class="row justify-content-end">
        <div class="col-12 col-md-5 brand-col bg-imgContrib" style="background-image: url('{{ file_url(content.field_picture[0]['#item'].entity.fileUri) }}');">
          <ul class="brand-list">
            {% for i in content.field_picture_limit_3['#items']|keys %}
              <li>{{ content.field_picture_limit_3[i] }}</li>
            {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-7 brand-col">
          <div class="brand-offset">
            <h2>{{ content.field_title }}</h2>
            <p>{{ content.field_description }}</p>
            <p class="d-flex justify-content-center justify-content-start-lg"><a href="{{ content.field_cta[0]['#url'] }}" class="cta">{{ content.field_cta[0]['#title'] }}</a></p>
          </div>
        </div>
      </div>
    </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
