{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
  'container',
  'gap-b'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
    <div class="row align-items-center">
      <div class="col-12 col-lg-3 offset-lg-2">
        <h2>{{ content.field_title }}</h2>
        <p>{{ content.field_description }}</p>
        <a href="{{ content.field_cta[0]['#url'] }}" class="cta">{{ content.field_cta[0]['#title'] }}</a>
      </div>
      <div class="col-12 col-lg-5 offset-lg-1 pos-rel text-end">
        <div class="pos-center-v">{{ content.field_picture_second }}</div>
        {{ content.field_picture }}
      </div>
    </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
