{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.field_picture }} {# Assiette #}
      {{ content.field_description }}
      {{ content.field_color }}
      {{ content.field_title }} {# Nom de la collection	 #}
      {{ content.field_text }} {# Titre #}
      {{ content.field_picture_second }} {# Visuel #}
    {% endblock %}
  </div>
{% endblock paragraph %}
