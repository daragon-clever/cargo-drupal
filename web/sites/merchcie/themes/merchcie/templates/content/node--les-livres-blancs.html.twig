<div id="livresblanc">
    <div class="bg-color1 z1">
        <div class="container">
            <div class="row">
                <div class="col main-big-title">
                    <h1 class="text-white">
                        {{ content.field_livre_titre[0] }}<br>
                        <span class="text-color2">{{ content.field_livre_titre[1] }}</span>
                    </h1>
                    <span class="line-vertical dot-pattern-color2"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="c1 text-center">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6 offset-lg-3">
                    {{ content.field_livre_intro[0] }}
                    <div class="bg-color4 p-5 bloc">
                        {{ content.field_livre_intro[1] }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="download" class="c2 bg-color1">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6 text-center">
                    {{ content.field_livre_form_img }}
                </div>
                <div class="col-12 col-lg-6">
                    <h3 class="text-color2">
                        {{ content.field_livre_form_title }}
                    </h3>
                    {{ content.field_livre_form }}
                </div>
            </div>
        </div>
    </div>

    <div class="c3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-6">
                    {{ content.field_livre_outro_img }}
                </div>
                <div class="col-12 col-lg-6">
                    {{ content.field_livre_outro }}
                </div>
            </div>
        </div>
    </div>
</div>