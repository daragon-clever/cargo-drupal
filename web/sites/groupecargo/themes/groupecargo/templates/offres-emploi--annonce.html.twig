<div id="offre">
    <div class="container">
        {%  if offer == 'false' %}
            <p>L'annonce n'existe pas.</p>
            <a href="{{ path('offresEmploi.content') }}">Retournez sur la page des offres d'emploi.</a>
        {% else %}
            <div class="row detail-offre">
                <div class="col-12 col-sm-3 left order-2 order-sm-1">
                    <h2>Contrat / Infos</h2>

                    <span class="info-title">Référence de l'annonce</span>
                    <span class="info-content">#{{ offer.codeRecrutement }}</span>

                    <span class="info-title">Date de l'annonce</span>
                    <span class="info-content">{{ offer.dateCreationDemande|date("d/m/Y") }}</span>

                    <span class="info-title">Type de contrat</span>
                    <span class="info-content">{{ offer.typeContrat }}</span>

                    <span class="info-title">Lieu de travail</span>
                    <span class="info-content">{{ offer.lieuRecrutement }}</span>

                    <span class="info-title">Entreprise</span>
                    <span class="info-content">{{ offer.filialeSociete }}</span>

                    {% if offer.sirh_id %}
                        <a class="btn-cta" href="{{ sirh_url }}{{ offer.sirh_id }}" target="_blank"><button>Je postule</button></a>
                    {% endif %}
                    <div class="text-center">
                        <a class="back d-sm-none" href="{{ path('offresEmploi.content') }}">< Retour</a>
                    </div>
                </div>

                <div class="col-12 col-sm-9 right order-1 order-sm-2">
                    <h1>Offre d'emploi - {{ offer.intitulePoste }}</h1>

                    {% if offer.descriptionEntreprise %}
                    <div class="txt-grey">
                        <p>{{ offer.descriptionEntreprise | raw}}</p>
                    </div>
                    {% endif %}
                    {% if offer.descriptionMission %}
                    <div>
                        <p><b class="title">Définition du poste :</b></p>
                        <p>{{ offer.descriptionMission | raw }}</p>
                    </div>
                    {% endif %}
                    {% if offer.descriptionProfil %}
                    <div>
                        <p><b class="title">Profil recherché :</b></p>
                        <p>{{ offer.descriptionProfil | raw }}</p>
                    </div>
                    {% endif %}
                    <a class="back d-none d-sm-inline-block" href="{{ path('offresEmploi.content') }}">< Retour</a>
                </div>
            </div>
        {% endif %}
    </div>
</div>