{%
  set classes = [
  'Slider-slide',
  'PressRelease-slide'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <a href="{{ file_url(content.field_pdf_file[0]['#file'].fileUri) }}" target="_blank" class="PressRelease-slide-link">
        <div class="PressRelease-slide-img">{{ content.field_picture }}</div>
        <div class="PressRelease-slide-hoverContent">
          <div class="PressRelease-slide-hoverContent-top">
            <h4 class="PressRelease-slide-title">{{ content.field_title }}</h4>
            <div class="PressRelease-slide-date">{{ content.field_date }}</div>
          </div>
          <div class="PressRelease-slide-hoverContent-bottom">
            <span class="PressRelease-slide-download">
              {{ "Voir la parution"|t }}
              {% include directory ~ '/src/assets/svg/arrow-left.svg' %}
            </span>
          </div>
        </div>
      </a>
    {% endblock %}
  </div>
{% endblock paragraph %}
