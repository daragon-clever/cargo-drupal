                    </div>
                    <div class="item red-25deg text-white">
                        <div class="row">
                            <div class="col-12 col-lg">
                                {{ content.field_produits_poeles_sl_txts[4] }}
                            </div>
                            <div class="col-12 col-lg text-right">
                                {{ content.field_produits_poeles_sl_imgs[4] }}
                            </div>
                        </div>
                    </div>
                    <div class="item green text-white">
                        <div class="row">
                            <div class="col-12 col-lg">
                                {{ content.field_produits_poeles_sl_txts[5] }}
                            </div>
                            <div class="col-12 col-lg text-right">
                                {{ content.field_produits_poeles_sl_imgs[5] }}
                            </div>
                        </div>
                    </div>
                    <div class="item grey text-white">
                        <div class="row">
                            <div class="col-12 col-lg">
                                {{ content.field_produits_poeles_sl_txts[6] }}
                            </div>
                            <div class="col-12 col-lg text-right">
                                {{ content.field_produits_poeles_sl_imgs[6] }}
                            </div>
