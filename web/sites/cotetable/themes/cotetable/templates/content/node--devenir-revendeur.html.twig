    <div class="intro">
        <div class="opacity-img">
             {{ content.field_revendeur_intro_img }}
        </div>
        <div class="absolute-banner">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="content-banner">
                            <div>
                                 {{ content.field_revendeur_intro_txt }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTENT 1 -->
    <div class="container c1 max-1180">
