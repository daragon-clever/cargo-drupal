<!-- PAGE CONTENT -->
<div class="container-fluid">
    {% if page.highlighted %}
        <div class="row message-site">
            <div class="col">
                {{ page.highlighted }}
            </div>
        </div>
    {% endif %}
    {% if page.content %}
        <div class="row">
            <div class="col">
                {{ page.content }}
            </div>
        </div>
    {% endif %}
</div>

<footer>
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- Footer -->
                {% if page.footer %}
                    {{ page.footer }}
                {% endif %}
            </div>
        </div>
    </div>
</footer>

<div class="post-footer">
    {{ page.txtfooter }}
</div>