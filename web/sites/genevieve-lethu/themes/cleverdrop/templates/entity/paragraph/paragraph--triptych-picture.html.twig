{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.field_picture_second }} {# Visuel centré	 #}
      {{ content.field_picture }} {# Visuel à droite	 #}
      {{ content.field_picture_third }} {# Visuel à gauche	 #}
    {% endblock %}
  </div>
{% endblock paragraph %}
