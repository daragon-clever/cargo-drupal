{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.field_color }}
      {{ content.field_title }}
      {{ content.field_picture }}
      {{ content.field_picture_second }}
      {{ content.field_picture_third }}
      {{ content.field_picture_fourth }}
      {{ content.field_picture_fifth }}
      {{ content.field_picture_sixth }}
      {{ content.field_picture_seventh }}
    {% endblock %}
  </div>
{% endblock paragraph %}
