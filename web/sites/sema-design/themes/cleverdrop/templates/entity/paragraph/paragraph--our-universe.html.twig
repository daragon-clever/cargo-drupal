{%
  set classes = [
  'OurUniverse-wpr'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
    <div class="Section has-altBg OurUniverse" style="--sail-color: {{content.field_color[0]['#markup']}};">
      <div class="Section-inner OurUniverse--inner">
        <div class="OurUniverse-left">
          <h2 class="OurUniverse-title">{{ content.field_title }}</h2>
          <div class="ImageAnimationWpr OurUniverse-leftImg" data-animate='{"threshold": "0.3"}'>
            <svg viewBox="0 0 100 100" class="Brush" aria-hidden="true">
              <use xlink:href="#sema-brush"></use>
            </svg>
            {{ content.field_our_universe_left_picture }}
          </div>
        </div>
        <div class="OurUniverse-right">
          <div class="OurUniverse-rightImg">
            <div class="ImageAnimationWpr OurUniverse-rightImgTop" data-animate='{"threshold": "0.3"}'>
              {{ content.field_our_universe_top_r_picture }}
            </div>
            <div class="ImageAnimationWpr OurUniverse-rightImgBottom" data-animate='{"threshold": "0.3"}'>
              {{ content.field_our_universe_bttm_r_p }}
            </div>
          </div>
          <div class="OurUniverse-content">
            {% if content.field_subtitle %}
              <h3>{{content.field_subtitle}}</h3>
            {% endif %}
            {% if content.field_description %}
              <div class="OurUniverse-text">
                {{ content.field_description }}
              </div>
            {% endif %}
            {% if content.field_cta %}
              {% include directory ~ '/templates/ui/atoms/primary-cta.twig' with {
                text: content.field_cta[0]['#title'],
                url: content.field_cta[0]['#url']
              } %}
            {% endif %}
          </div>
        </div>
      </div>
      {% include directory ~ '/src/assets/svg/stains.svg' %}
    </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
