<div class="univers">
    <div class="container label-wrapper d-none d-lg-block">
        <div class="row">
            <div class="col">
                <div class="row">
                    {% for i in 0..3 %}
                        <div class="col-12 col-lg-3 js-univers-label" data-label="label{{ i }}">
                            <div class="label {% if i == 0 %}active{% endif %}">
                                {{ content.field_univers_items_svg[i] }}
                                {{ content.field_univers_items[i] }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for i in 0..3 %}
                <div class="col-12 js-univers" data-label="label{{ i }}">
                    <div class="row">
                        <div class="col-12 col-lg-3 js-univers-label d-lg-none d-xl-none">
                            <div class="label">
                                {{ content.field_univers_items_svg[i] }}
                                {{ content.field_univers_items[i] }}
                            </div>
                        </div>
                    </div>
                    <div class="row js-content">
                        <div class="col-12">
                            <div class="txt">
                                {{ content.field_univers_items_txt[i] }}
                            </div>
                        </div>

                        {% set fieldName = "field_univers_item" ~ (i + 1) ~ "_imgs" %}
                        {% for picture in content[fieldName]['#items'] %}
                            <div class="col-12 col-md-6 img-wrapper">
                                <div>
                                    <img src="{{ file_url(picture.entity.uri.value) }}" />
                                    <div class="alt-wrapper">
                                        <span>{{ picture.alt }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>