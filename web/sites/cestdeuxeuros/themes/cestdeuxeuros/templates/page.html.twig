<div class="header-wrapper">
    <!-- Header -->
    {% include directory ~ '/partials/header.html.twig' %}
</div>

<div class="main-content">
    {% if page.highlighted %}
        <div class="message-site">
            {{ page.highlighted }}
        </div>
    {% endif %}

    {% if page.content %}
        {{ page.content }}
    {% endif %}

    <footer>
        {% if page.footer %}
            {{ page.footer }}
        {% endif %}
    </footer>
</div>

{% if page.popup_newsletter %}
    {{ page.popup_newsletter }}
{% endif %}