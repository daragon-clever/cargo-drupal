<div id="header-wrapper" class="navbar-expand-lg">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-2">
                <!-- Header -->
                {% include directory ~ '/partials/header.html.twig' %}
            </div>
            <div class="col">
                <!-- Navigation -->
                {% if page.navigation %}
                    {% include directory ~ '/partials/navigation.html.twig' %}
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="container">
    {% if page.highlighted %}
        <div class="row message-site">
            <div class="col">
                {{ page.highlighted }}
            </div>
        </div>
    {% endif %}

    {% if page.content %}
        <div class="row">
            <div class="col">
                {{ page.content }}
            </div>
        </div>
    {% endif %}

    <footer>
        <!-- Footer -->
        {% if page.footer %}
            {{ page.footer }}
        {% endif %}
        <!-- Post footer -->
        {{ page.txtfooter }}
    </footer>
</div>