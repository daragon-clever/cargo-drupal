{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.field_title }}
      {{ content.field_description }}
      {{ content.field_picture }} {# Visuel 1	  #}
      {{ content.field_picture_second }} {#  Visuel 2a	 #}
      {{ content.field_picture_third }} {# Visuel 2b	 #}
      {{ content.field_picture_fourth }} {# Visuel 3a	 #}
      {{ content.field_picture_fifth }} {# Visuel 3b	 #}
    {% endblock %}
  </div>
{% endblock paragraph %}
