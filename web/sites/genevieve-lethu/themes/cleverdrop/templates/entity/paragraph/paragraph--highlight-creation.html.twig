{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.field_description }}
      {{ content.field_color }}
      {{ content.field_title }}
      {% for i in content.field_picture_limit_3['#items']|keys %}
        {{ content.field_picture_limit_3[i] }}
      {% endfor %}
    {% endblock %}
  </div>
{% endblock paragraph %}
