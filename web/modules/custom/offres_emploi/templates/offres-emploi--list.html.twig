<table>
    <thead>
        <tr>
            <td>intitulePoste</td>
            <td>dateCreationDemande</td>
            <td>typeContrat</td>
            <td>metier</td>
            <td>Lien vers l'annonce</td>
        </tr>
    </thead>
    <tbody>
        {% if offers %}
            {% for offer in offers %}
                <tr>
                    <td>{{ offer.intitulePoste }}</td>
                    <td>{{ offer.dateOuverturePoste }}</td>
                    <td>{{ offer.typeContrat }}</td>
                    <td>{{ offer.metier }}</td>
                    <td><a href="{{ path('offresEmploi.content', {ref: offer.codeRecrutement}) }}">Voir l'annonce</a> </td>
                </tr>
            {% endfor %}
        {% else %}
            <p>Aucune offre</p>
        {% endif %}
    </tbody>
</table>
