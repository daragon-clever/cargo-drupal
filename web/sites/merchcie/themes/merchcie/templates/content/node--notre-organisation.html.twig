<div id="notre-organisation">
    <!--INTRO-->
    <div class="bg-color1">
        <div class="container">
            <div class="row">
                <div class="col main-big-title">
                    <h1 class="text-white">
                        {{ content.field_orga_intro }}
                    </h1>
                    <span class="line-vertical dot-pattern-color2"></span>
                </div>
            </div>
        </div>
    </div>

    <!--CONTENT 1-->
    <div class="c1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-7">
                    <h2 class="text-color2 before-line line-color2">
                        {{ content.field_orga_c1_title }}
                    </h2>
                    <div class="txt">
                        {{ content.field_orga_c1_text }}
                    </div>
                </div>
                <div class="col-12 col-lg-5">
                    <div class="img-wrapper">
                        <img class="img-fluid" src="{{ content.field_orga_c1_img[0] }}" alt="">
                        <div class="dot dot-pattern-color2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--CONTENT 2-->
    <div class="c2 bg-color4 text-center z0">
        <div class="container">
            <div class="row">
                <div class="col">
                    {{ content.field_orga_c2_intro }}
                    <span class="line-vertical dot-pattern-color3"></span>
                </div>
            </div>
            <div class="row">
                {% for i in 0..3 %}
                    <div class="item col-12 col-lg-4 {% if i == 0 or i == 2 %}offset-lg-2{% endif %} {% if i > 1 %}mt-lg-5{% endif %}">
                        {{ content.field_orga_c2_cards[i] }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!--CONTENT 3-->
    <div class="c3 text-center z1 know-what">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3 class="text-color2">
                        {{ content.field_orga_c3_title }}
                    </h3>
                    <a href="{{ content.field_orga_c3_link[0]['#url'] }}"
                       class="cta bg-color2 text-white">{{ content.field_orga_c3_link[0]['#title'] }}</a>
                </div>
            </div>
        </div>
        <div class="dot-left dot-pattern-color3"></div>
        <div class="dot-right dot-pattern-color2"></div>
    </div>
</div>
