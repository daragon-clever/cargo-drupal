<div class="offres-emploi-module">
    <div class="container" id="listing-offres">
        <div class="row">
            <div class="col-12 col-md-3 filters">
                <h4 class="d-none d-sm-block text-color2">Filtrer</h4>
                <span class="line dot-pattern-color2 w-100"></span>

                <div class="d-block d-md-none">
                    <button class="cta-filter top js-toggle-filters">
                        Filtrer
                    </button>
                </div>
                {% if data %}
                    <input type="text" id="searchbox" class="w-100" placeholder="Rechercher une offre" />

                    <div id="groupe-filtres-offres-emploi">
                        <div id="filtre-contrat" class="offer-caracteristic">
                            <span class="title-caracteristic">Type de contrat</span>
                            <div class="select-option"></div>
                        </div>
                        <div id="filtre-poste" class="offer-caracteristic">
                            <span class="title-caracteristic">Type de poste</span>
                            <div class="select-option"></div>
                        </div>
                        <div id="filtre-lieu" class="offer-caracteristic">
                            <span class="title-caracteristic">Lieu de travail</span>
                            <div class="select-option"></div>
                        </div>
                        <div class="d-block d-sm-none">
                            <button class="cta-filter bottom js-toggle-filters w-100 bg-color2" style="display: none">
                                Valider
                            </button>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="col-12 col-md-9 jobs-list">
                <h4 class="text-color2">Les postes à pourvoir</h4>
                <span class="line dot-pattern-color2 w-100"></span>
                {% if data %}
                    <table id="toutes-les-offres" class="display nowrap w-100">
                        <thead>
                            <tr>
                                <th class="all wrap">Poste</th>
                                <th class="all">Type de contrat</th>
                                <th class="js-hide">Type de poste</th>
                                <th class="not-mobile">Date de début</th>
                                <th class="not-mobile">Lieu</th>
                                <th class="not-mobile js-only-xs"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for offre in data %}
                                <tr class="clickable-row" data-href="{{ path('offresEmploi.content', {ref: offre.codeRecrutement}) }}">
                                    <td class="wrap">{{ offre.intitulePoste }}</td>
                                    <td class="">{{ offre.typeContrat }}</td>
                                    <td>{{ offre.metier }}</td>
                                    <td>{{ offre.dateOuverturePoste|date("d/m/Y") }}</td>
                                    <td>{{ offre.lieuRecrutement }}</td>
                                    <td><a href="{{ path('offresEmploi.content', {ref: offre.codeRecrutement}) }}" class="text-color2">Voir l'annonce</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div id="alerte-offres" class="bg-color1 text-white">
                        <p class="error">Nous n'avons aucune offre pour le moment. Revenez bientôt pour de nouvelles offres.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>