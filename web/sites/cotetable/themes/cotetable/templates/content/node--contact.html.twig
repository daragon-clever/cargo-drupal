<div id="contact">
    <!-- BANNER -->
    <div class="intro">
        <div class="opacity-img">
             {{ content.field_contact_banner_img }}
        </div>
        <div class="absolute-banner">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="content-banner">
                            <div>
                                 {{ content.field_contact_banner_txt }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FORM -->
    <div class="container max-1180 form-container mt-5">
        <div class="row">
            <div class="col">
                <div class="form-wrap">
                    {{ content.field_contact_form }}
                </div>
            </div>
        </div>
    </div>

    <!-- CONTACT-BLOCK -->
    {{ content.field_contact_block }}
</div>