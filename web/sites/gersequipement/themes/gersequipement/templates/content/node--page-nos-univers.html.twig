            {% endfor %}
        </div>
        <div class="row" data-content="block_3">
            {% for picture in content.field_univers_item4_imgs['#items'] %}
                <div class="col-12 col-md-6">
                    <img src="{{ file_url(picture.entity.uri.value) }}" />
                </div>
            {% endfor %}
        </div>
    </div>
</div>