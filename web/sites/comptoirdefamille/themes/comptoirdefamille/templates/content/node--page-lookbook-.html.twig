<div class="row">
    <div class="container lookbook">
        <!-- INTRO -->
        <div class="row justify-content-center">
            <div class="col-auto intro-entete">
                {{ content.field_lb_txt_intro[0] }}
            </div>
        </div>

        <!-- BLOCS -->
        {% for i in 0..4 %}
            <div class="row {% if i is odd %}odd{% else %}even{% endif %}">
                <div class="col-12 col-lg-4 {% if i is odd %}order-lg-2{% endif %} txt-wrapper">
                    <div class="inner">
                        {{ content.field_lb_txts[i] }}
                    </div>
                </div>
                <div class="col-12 col-lg-8 {% if i is odd %}order-1{% endif %} img-wrapper">
                    {{ content.field_lb_imgs[i] }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>