<div class="container mon-container">
    <div class="row">
        <div class="col-3">
            <h3>Filtrer</h3>

            <input type="text" id="searchbox" placeholder="Rechercher une offre" />
            <div id="groupe-filtres-offres-emploi">
                <div id="filtre-contrat" class="filtres-offres-emploi">
                    <b>Type de contrat</b>
                    <div class="select-option"></div>
                </div>
                <div id="filtre-poste" class="filtres-offres-emploi">
                    <b>Type de poste</b>
                    <div class="select-option"></div>
                </div>
                <div id="filtre-lieu" class="filtres-offres-emploi">
                    <b>Lieu de travail</b>
                    <div class="select-option"></div>
                </div>
            </div>
        </div>
        <div class="col-9">
            <h3>Les postes Ã  pourvoir</h3>

            <table id="toutes-les-offres" class="display" style="width: 100%">
                <thead>
                <tr>
                    <th>Poste</th>
                    <th>Type de contrat</th>
                    <th style="display: none;">Type de poste</th>
                    <th>Date de publication</th>
                    <th>Lieu</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for offre in data %}
                    <tr>
                        <td>{{ offre.intitulePoste }}</td>
                        <td>{{ offre.typeContrat }}</td>
                        <td style="display: none;">{{ offre.metier }}</td>
                        <td>{{ offre.dateOuverturePoste|date("d/m/Y") }}</td>
                        <td>{{ offre.lieuRecrutement }}</td>
                        <td><a href="/offres-emploi/{{ offre.codeRecrutement }}">Voir l'annonce</a> </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    var my_filter_value_filiale_societe = "{{ filter.filiale_societe }}";
    var my_filter_value_type_contrat = "{{ filter.type_contrat }}";
    var my_filter_value_type_metier = "{{ filter.type_metier }}";
    var my_filter_value_lieu = "{{ filter.lieu }}";
</script>