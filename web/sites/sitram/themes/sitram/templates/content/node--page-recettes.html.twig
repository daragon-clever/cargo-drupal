<div id="recette-individuelle">
  <div class="bg-img-wood">
    <div class="container">
      <div class="row">
        <div class="col ban">
          <img src="{{ content.field_recipe_imgs[0] }}" class="img-fluid mt-5 mb-4" alt=""/>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h1>{{ content.field_recipe_title }}</h1>

          <div class="mt-4 pills">
            <span>{{ content.field_filter_salees_sucrees }}</span>
            <span>{{ content.field_filter_saison }}</span>
            <span>{{ content.field_filter_duree }}</span>
            <span>{{ content.field_filtre_type }}</span>
            <span>{{ content.field_filter_difficulte }}</span>
            {% for i in 0..node.field_filtre_ustensile|length - 1 %}
              <span>{{ content.field_filtre_ustensile['#items'][i].entity.label }}</span>
            {% endfor %}
          </div>

          <div class="mt-4">
            <div class="row justify-content-start">
              <div class="col-lg-2">
                <div class="row align-items-center">
                  <div class="col-3">
                    <div class="picto-prepa"></div>
                  </div>
                  <div class="col">
                    <b>{{ content.field_recipe_tps_prepa['#title'] }}</b>
                    {{ content.field_recipe_tps_prepa }}
                  </div>
                </div>
              </div>
              <div class="col-lg-2">
                <div class="row align-items-center">
                  <div class="col-3">
                    <div class="picto-cuisson"></div>
                  </div>
                  <div class="col">
                    <b>{{ content.field_recipe_tps_cuisson['#title'] }}</b>
                    {{ content.field_recipe_tps_cuisson }}
                  </div>
                </div>
              </div>
              <div class="col-lg-2">
                <div class="row align-items-center">
                  <div class="col-3">
                    <div class="picto-quantite"></div>
                  </div>
                  <div class="col">
                    <b>{{ content.field_recipe_quantite['#title'] }}</b>
                    {{ content.field_recipe_quantite }}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-5">
            <div class="row">
              <div class="col-12 col-sm-6 pr-5">
                <div>
                  <h3 class="txt-blue"><span>{{ content.field_recipe_summary['#title'] }}</span></h3>
                  {{ content.field_recipe_summary }}
                </div>
                <div class="row mt-5">
                  <div class="col">
                    <img src="{{ content.field_recipe_imgs[1] }}" class="img-recette" alt=""/>
                  </div>
                  <div class="col">
                    <img src="{{ content.field_recipe_imgs[2] }}" class="img-recette" alt=""/>
                  </div>
                </div>
              </div>
              <div class="col-12 col-sm-6 pl-5">
                <div>
                  <h3 class="txt-blue"><span>{{ content.field_recipe_ingredients['#title'] }}</span></h3>
                  <p>
                    {{ content.field_recipe_ingredients }}
                  </p>
                </div>
                <div class="mt-5">
                  <h3><span>{{ (node.field_filtre_ustensile.getvalue|length > 1) ? 'Ustensiles'|trans : 'Ustensile'|trans }}</span></h3>
                  <div class="js-ustensiles-slider slider">
                    {{ content.field_filtre_ustensile }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
