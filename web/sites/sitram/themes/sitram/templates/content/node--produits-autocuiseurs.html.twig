<div id="produit" class="autocuiseurs">
    <div id="ban-intro" class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="row">
                        <div class="col ban">
                            {{ content.field_prod_autocuiseurs_ban }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ content.field_prod_autocuiseurs_intro }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid my-5">
        <div class="row">
            <div class="col text-center">
                {{ content.field_prod_autocuiseurs_c1_title }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="container max-1350 bg-verylightgrey-right">
                    <div class="row">
                        <div class="col">
                            <div class="js-slick-txt">
                                {% for i in 0 .. 9 %}
                                    <div class="question">
                                        <span class="nb">{{ i + 1 }}</span>
                                        {{ content.field_prod_autocuiseurs_c1_txts[i] }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row bg-img-blue">
        <div class="col">
            <div class="container">
                <div class="row">
                    <div class="col text-center text-white my-5">
                        {{ content.field_prod_autocuiseurs_c2_title }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ content.field_prod_autocuiseurs_c2_img }}
                    </div>
                </div>
                <div class="row my-5">
                    <div class="col text-center">
                        {{ content.field_prod_autocuiseurs_c2_txt }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container max-1065 gutter-27 mb-4">
        {% for i in 0..2 %}
            <div class="row align-items-center">
                <div class="col {% if i is odd %}order-lg-2{% endif %}">
                    {{ content.field_prod_autocuiseurs_c3_txts[i] }}
                </div>
                <div class="col text-right">
                    {{ content.field_prod_autocuiseurs_c3_imgs[i] }}
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="container max-1065 mb-5">
        <div class="row mb-3">
            <div class="col">
                <div class="ml-lg-3 mb-4">
                    {{ content.field_prod_autocuiseurs_c4_title }}
                </div>
            </div>
        </div>
        <div class="row justify-content-center text-center">
            {% for i in 0..2 %}
                <div class="col-12 col-sm-auto">
                    <div class="px-4">
                        {{ content.field_prod_autocuiseurs_c4_imgs[i] }}
                        {{ content.field_prod_autocuiseurs_c4_txts[i] }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container-fluid pt-grey pt-5">
        <div class="row">
            <div class="col">
                <div class="container max-1065">
                    <div class="row align-items-end">
                        <div class="col">
                            {{ content.field_prod_autocuiseurs_c5_img }}
                        </div>
                        <div class="col">
                            <div class="pl-lg-5">
                                {{ content.field_prod_autocuiseurs_c5_txt }}
                            </div>
                        </div>
                    </div>

                    <hr class="my-5"/>

                    <div class="row">
                        <div class="col">
                            <ul class="nav mb-4 custom-tabs" id="pills-tab" role="tablist">
                                {% for i in 0..2 %}
                                    <li class="nav-item">
                                        {{ content.field_prod_autocuiseurs_tab_menu[i] }}
                                    </li>
                                {% endfor %}
                            </ul>
                            <div class="tab-content" id="pills-tabContent">

                                <!-- TAB 1 -->
                                <div class="tab-pane fade show active" id="pills-1" role="tabpanel"
                                     aria-labelledby="pills-1-tab">
                                    <div class="row align-items-center">
                                        <div class="col-12 col-sm">
                                            <div class="pr-lg-4">
                                                {{ content.field_prod_autocuiseurs_tab_txts[0] }}
                                            </div>
                                        </div>
                                        <div class="col-12 col-sm-auto">
                                            {{ content.field_prod_autocuiseurs_tab_imgs[0] }}
                                        </div>
                                    </div>
                                </div>

                                <!-- TAB 2 -->
                                <div class="tab-pane fade" id="pills-2" role="tabpanel"
                                     aria-labelledby="pills-2-tab">
                                    <div class="mb-4">
                                        {{ content.field_prod_autocuiseurs_tab_imgs[1] }}
                                    </div>
                                    <div class="row">
                                        {{ content.field_prod_autocuiseurs_tab_txts[1] }}
                                    </div>
                                </div>

                                <!-- TAB 3 -->
                                <div class="tab-pane fade" id="pills-3" role="tabpanel"
                                     aria-labelledby="pills-3-tab">
                                    <div class="row align-items-center">
                                        <div class="col-12 col-sm">
                                            <div class="pr-lg-4">
                                                {{ content.field_prod_autocuiseurs_tab_txts[2] }}
                                            </div>
                                        </div>
                                        <div class="col-12 col-sm-auto">
                                            {{ content.field_prod_autocuiseurs_tab_imgs[2] }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-5"/>
                </div>
            </div>
        </div>
    </div>

    <div class="container max-1065 gutter-27">
        {% for i in 0..3 %}
            <div class="row align-items-center mb-5">
                <div class="col {% if i is even %}order-lg-2{% endif %}">
                    {{ content.field_prod_autocuiseurs_c6_txts[i] }}
                </div>
                <div class="col text-right">
                    {{ content.field_prod_autocuiseurs_c6_imgs[i] }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
