{{ attach_library('merchcie/lightbox') }}

<div id="challenge">
    <!--INTRO-->
    <div class="bg-color1 z1">
        <div class="container">
            <div class="row">
                <div class="col main-big-title">
                    <span class="line-vertical dot-pattern-color2"></span>
                </div>
            </div>
        </div>
    </div>

    <!--CONTENT 1-->
    <div class="c1">
        <div class="container">
            <div class="row text-center">
                <div class="col-12 col-lg-6 offset-lg-3">
                    <h4 class="text-hand text-color2">
                        {{ "Le challenge"|trans }}
                    </h4>
                    <div class="bg-color4 block-txt">
                        <p>
                            {{ content.field_challenge_c1_intro }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="row mt-5 text-intro">
                <div class="col-12 col-lg-6 offset-lg-3">
                    {{ content.field_challenge_c1_text }}
                </div>
            </div>
        </div>
    </div>

    <!--CONTENT 2-->
    <div class="c2 bg-color4">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h4 class="text-color2 mb-5">
                        {{ content.field_challenge_c2_title }}
                    </h4>
                    <div class="row justify-content-center">
                        {% for i in 0..content.field_challenge_c2_imgs['#items']|length-1 %}
                            <div class="col-12 col-lg-3">
                                <span class="img-wrapper">
                                    <a href="{{ file_url(content.field_challenge_c2_imgs['#items'][i].entity.uri.value) }}"
                                       class="hover-picto-eye"
                                       data-lightbox="gallery"
                                       data-title="{{ node.field_challenge_c2_imgs[i].alt }}">
                                            <img class="filter-hover-color1"
                                                 src="{{ file_url(content.field_challenge_c2_imgs['#items'][i].entity.uri.value) }}"
                                                 alt="">
                                    </a>
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--CONTENT 3-->
    {% if content.field_challenge_c3_name|render %}
        <div class="c3">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-3">
                        <h4 class="text-color2 mb-5 text-center">
                            {{ "L'avis du client"|trans }}
                        </h4>
                        <div class="testimonial-item bg-color2 text-white with-photo">
                            <blockquote class="mb-5">
                                {{ content.field_challenge_c3_notice }}
                            </blockquote>
                            <div>
                                {% if content.field_challenge_c3_img[0]|render %}
                                    <img src="{{ content.field_challenge_c3_img[0] }}"
                                         alt="">
                                {% endif %}
                                <div class="mt-4">
                                <span class="text-hand">
                                    {{ content.field_challenge_c3_name }}
                                </span>
                                    <small>
                                        {{ content.field_challenge_c3_job }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
