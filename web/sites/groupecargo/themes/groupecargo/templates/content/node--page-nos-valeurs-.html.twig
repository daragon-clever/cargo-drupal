<div class="row">
    <div class="container content valeurs">
        <div class="row">
            <div class="col">

                <!-- Intro -->
                <div class="intro" nvs-animation-delay="200" nvs-animation-type="in-left">
                    {{ content.field_valeurs_intro }}
                </div>

                <!-- Desktop -->
                <div class="d-none d-xl-block desktop">
                    {{ content.field_valeurs_svg_desktop }}
                    <div class="txts-wrapper">
                        <div class="block-txt" nvs-animation-delay="200" nvs-animation-type="in-right">
                            {{ content.field_valeurs_block_txt[0] }}
                        </div>
                        <div class="block-txt" nvs-animation-delay="200" nvs-animation-type="in-left">
                            {{ content.field_valeurs_block_txt[1] }}
