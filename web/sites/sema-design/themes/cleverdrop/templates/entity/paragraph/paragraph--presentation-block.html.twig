{%
  set classes = [
  'PresentationBlock',
  'Section',
  'has-altBg'
]
%}
{% block paragraph %}
  <div {{ attributes.addClass(classes) }} data-animate='{"threshold": "0.3"}'>
    <svg viewBox="0 0 100 100" class="LeftBrush" aria-hidden="true">
      <use xlink:href="#sema-brush"></use>
    </svg>
    <svg viewBox="0 0 100 100" class="RightBrush" aria-hidden="true">
      <use xlink:href="#sema-brush"></use>
    </svg>
    <div class="PresentationBlock--inner">
    {% block content %}
      <h3 class="PresentationBlock-title">{{ content.field_title }}</h3>
      {{ content.field_description }}
    {% endblock %}
    </div>
  </div>
{% endblock paragraph %}
